<div class="row">
    <div class="col-6 offset-3" style="padding-top: 60px;">
        <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data" style="padding-top: 100px;">
            <h5>Agregar una novedad</h5>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Titulo" name="titulo">
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
            </div>
            <div class="form-group">
                <label style="color: grey;">
                    <h5> Imagen:</h5> <input type="file" name="imagen" id="imagen"/>
                </label>
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
        {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
    </div>
</div>